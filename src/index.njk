---
layout: layouts/base.njk
---

<div class="cfc-events">

  <section>

    <h2>
    {% if events[0].date | isFutureDate %}
      Upcoming event
    {% else %}
      Latest event
    {% endif %}
    </h2>

    <h3>{{ events[0].name }}</h3>
    <date>{{ events[0].date | readableDate }}</date>
    <p>{{ events[0].description }}</p>
    {% if events[0].url %}
      <a href="{{ events[0].url }}" target="_blank">
      {% if events[0].date | isFutureDate %}
        More information and sign up
      {% else %}
        See more
      {% endif %}
    {% endif %}
    </a>
  </section>

  <section>

    <h2>Previous events</h2>

    <ul class="cfc-events-list">
    {% set len = events.length %} 
    {% for i in range(1, len) %}
      <li>
        <h3>{{ events[i].name }}</h3>
        <date>{{ events[i].date | readableDate }}</date>
        {% if events[i].url %}
          <a href="{{ events[i].url }}"  target="_blank" rel="noopener">See more</a>
        {% endif %}
      </li>
    {% endfor %}
      
    </ul>

  </section>

</div>

